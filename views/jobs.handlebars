<!-- jumbotron image display -->
<div class="container-fluid" id="bcgJobs">
  <!-- nav starts -->
  <nav class="navbar">
    <a href="/">HOME</a>
    <a href="/jobs">JOB PORTAL</a>
    <a href="/status">STATUS PORTAL</a>
    <a href="/admin">ADMIN PORTAL</a>
  </nav>
  <!-- nav ends -->

  <!-- end text title -->

  <!-- end of container fluid -->

  <!-- container fot job search -->
  <div class="container-fluid" id="search-container">

    <h1 class="display-4 dream-job">Find your dream job!</h1>
    <p class="lead alt" id="textSub-status">
      View all jobs, current status of the applciation, option to remove/accept job offer, save your favorite
      jobs!
    </p>

    <div class="form-group" id="search-form">
      <label for="exampleFormControlSelect1">Location</label>
      <select class="form-control form-jobsearch" id="exampleFormControlSelect1">
        {{!-- handlebars for location --}}
        {{#each locations}}
          <option>{{this.location}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group" id="search-Div">

      <label for="exampleInputEmail1">Job Title</label>
      <input type="text" class="form-control form-jobtitle" id="jobSearch" aria-describedby="emailHelp" />
    </div>

    <button type="button" class="btn btn-primary" id="search-button">
        <span> <i class="fas fa-search"></i> </span> Find Job
      </button>
  </div>
  <!-- end of container for job search form -->
</div>
<!-- end of nav,jumbotron-fluid,video display -->

<div class="container result-title">
  <h1 class="res-title">Your Search result</h1>
</div>



<!-- skill-set container -->
<div class="container-fluid" id="skill-set">
  
  <!-- first row -->
  <div class="card-deck">
    <!-- skill-set 1 -->
    {{!-- handlebars for skills tabs --}}
    {{#each skills}}
    <div class="card skill-card">
      <div class="card-body">

        <h5 class="card-title">Skill Set</h5>
        <hr style="background-color: #DC4749">
        <p class="card-text">{{this.skill}}</p>
        <!-- view skill-set -->
        <button type="button" id="view-skillset" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
          title="View Jobs">
          <i class="fas fa-eye fa-1x"></i>
        </button>
      </div>
    </div>
    {{/each}}
  </div>
  <!-- end of first row -->


  <!-- second row -->
  <div class="card-deck" id="mainDiv">

                 {{!-- JOBS SEARCH RESULTS --}}

  </div>

{{!-- TEST ROW - WILL DELETE LATER --}}
    <div class="card-deck col-8 ">

      <div class="card job-card " >
      <h5 class="card-header" style="border-bottom: 1px solid #fff;">TEST JOB TITLE</h5>


      <div class="card-body" id="DivTwo">
        <h5 class="card-title">TEST Location</h5>
        <hr style="background-color: #DC4749">

        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <!-- apply btn -->
        <button type="button" id="applyJob" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
          title="Apply">
          <i class="far fa-check-square fa-2x"></i>
        </button>
        <!-- save btn -->
        <button type="button" id="saveJob" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom"
          title="Save">
          <i class="far fa-star fa-2x"></i>
        </button>
      </div>
    </div>

  </div>
</div> 
<!-- end of skill-set container -->

